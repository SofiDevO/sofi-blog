    }
    &__link {
      text-decoration: none;
      color: aqua;
      display: flex;
      align-items: center;
      gap: 0.3rem;
    }
  }

  .dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    list-style: none;
    padding: 0;
    margin: 0;
    min-width: 150px;
    z-index: 10;
    margin-top: 0.3rem;
    &__item {
      padding: 0.5rem 1rem;
      white-space: nowrap;
    }
  }

  .dropdown__link {
    text-decoration: none;
    color: inherit;
    display: block;
    width: 100%;
  }

  .header__item:hover .dropdown {
    display: block;
  }
</style>
