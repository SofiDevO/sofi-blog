---
import BackgroundGradient from "@src/components/atoms/BackgroundGradient/BackgroundGradient.astro";
import DividerBottom from "@src/components/atoms/DividerBottom/DividerBottom.astro";
import DividerTop from "@src/components/atoms/DividerTop/DividerTop.astro";
import "./_support.scss";

import Layout from "@src/layouts/Layout.astro";
import Contributtors from "./components/contributtors/Contributtors.astro";
import GithubAnim from "./components/github-anim/GithubAnim.astro";
import SuportHero from "./components/SupportHero.astro";

import { getAboutPage } from "@src/services/getAboutPage";

const about = await getAboutPage(337);
console.log(about);

const pageData = {
  title: about.title,
  content: about.blocks,
};

console.log(pageData.content[2].attributes.content);
---

<Layout title="Contribuye a este sitio">
  <BackgroundGradient>
    <SuportHero pageData={pageData} />
  </BackgroundGradient>
  <DividerTop />
  <GithubAnim pageData={pageData} />

  <DividerBottom fill="shape-fill-black" />
  <Contributtors />
</Layout>

<style is:inline>
  main {
    background: black;
    @media  (width <= 768px) {

      padding-top:4rem;
    }
  }
</style>
